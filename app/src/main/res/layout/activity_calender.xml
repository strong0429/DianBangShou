<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="8dp">

    <TextView
        android:id="@+id/title_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="选择开始日期："/>
    <DatePicker
        android:id="@+id/calendar_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_start_date"
        android:layout_centerHorizontal="true"
        android:calendarViewShown="false"
        android:datePickerMode="spinner">
    </DatePicker>

    <TextView
        android:id="@+id/title_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendar_start"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="选择结束日期："/>
    <DatePicker
        android:id="@+id/calendar_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_end_date"
        android:layout_centerHorizontal="true"
        android:calendarViewShown="false"
        android:datePickerMode="spinner">
    </DatePicker>

    <Button
        android:id="@+id/button_ok"
        app:layout_widthPercent="70%"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_button_bg"
        style="@style/Button_Text"
        android:text="确定"/>
</android.support.percent.PercentRelativeLayout>
