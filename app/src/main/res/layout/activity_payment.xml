<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_border"
    android:padding="8dp">

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/total_money"
        android:text="应收款合计"/>
    <TextView
        android:id="@+id/total_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="24sp"
        android:textColor="#FC00"
        android:text="128.58"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/total_money"
        android:layout_alignBottom="@id/total_money"
        android:text="元，请选择支付方式:"/>

    <RelativeLayout
        android:id="@+id/layout_paymode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/total_money"
        android:layout_marginTop="8dp">
        <ImageButton
            android:id="@+id/pay_weichat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/weixin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_weichat"
            android:layout_alignStart="@id/pay_weichat"
            android:layout_alignEnd="@id/pay_weichat"
            android:gravity="center_horizontal"
            android:text="微信"/>
        <ImageButton
            android:id="@+id/pay_cash"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_toStartOf="@id/pay_weichat"
            android:background="@drawable/cash_s"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_cash"
            android:layout_alignStart="@id/pay_cash"
            android:layout_alignEnd="@id/pay_cash"
            android:gravity="center_horizontal"
            android:text="现金"/>
        <ImageButton
            android:id="@+id/pay_alipay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/pay_weichat"
            android:background="@drawable/ailipay_s"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_alipay"
            android:layout_alignStart="@id/pay_alipay"
            android:layout_alignEnd="@id/pay_alipay"
            android:gravity="center_horizontal"
            android:text="支付宝"/>
        <ImageButton
            android:id="@+id/pay_other"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/pay_alipay"
            android:background="@drawable/others_s"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_other"
            android:layout_alignStart="@id/pay_other"
            android:layout_alignEnd="@id/pay_other"
            android:gravity="center_horizontal"
            android:text="其它"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/layout_paymode"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/img_paycode"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/button_ok"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_button_bg"
        style="@style/Button_Text"
        android:text="确认已收款？"/>

</RelativeLayout>