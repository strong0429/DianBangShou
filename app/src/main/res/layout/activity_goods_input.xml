<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/goods_input"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        android:padding="8dp">
        <EditText
            android:id="@+id/goods_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/goods_barcode"
            android:layout_alignEnd="@id/goods_barcode"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorPrimary"
            android:text="商品条码"/>

        <EditText
            android:id="@+id/goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_barcode"
            android:layout_margin="8dp"
            android:paddingStart="8dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:hint="输入商品名称"/>
        <ImageButton
            android:id="@+id/phone_name"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@id/goods_name"
            android:layout_alignTop="@id/goods_name"
            android:background="@drawable/microphone"
            android:onClick="onClick_VoiceInput"/>

        <EditText
            android:id="@+id/goods_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_name"
            android:layout_margin="8dp"
            android:paddingStart="8dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:hint="输入商品规格信息"/>
        <ImageButton
            android:id="@+id/phone_spec"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@id/goods_remark"
            android:layout_alignTop="@id/goods_remark"
            android:background="@drawable/microphone"
            android:onClick="onClick_VoiceInput"/>

        <EditText
            android:id="@+id/goods_manuf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_remark"
            android:layout_margin="8dp"
            android:paddingStart="8dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:hint="输入商品生产厂家名称"/>
        <ImageButton
            android:id="@+id/phone_manuf"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@id/goods_manuf"
            android:layout_alignTop="@id/goods_manuf"
            android:background="@drawable/microphone"
            android:onClick="onClick_VoiceInput"/>

        <Spinner
            android:id="@+id/goods_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_manuf"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:spinnerMode="dialog"/>
    </RelativeLayout>

    <Button
        android:id="@+id/goods_input"
        app:layout_widthPercent="70%"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_button_bg"
        android:layout_marginBottom="16dp"
        android:onClick="onClick_Input"
        style="@style/Button_Text"
        android:text="确定"/>
</android.support.percent.PercentRelativeLayout>