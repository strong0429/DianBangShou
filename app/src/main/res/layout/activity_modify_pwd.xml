<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/title_bg_shape"/>
    <ImageView
        android:id="@+id/title_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/title_icon"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_icon"
        android:layout_above="@id/button_pwd_ok"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">

        <EditText
            android:id="@+id/text_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:inputType="textPassword"
            android:hint="请输入旧密码"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/text_old_pwd"
            android:layout_alignRight="@id/text_old_pwd"
            android:layout_alignEnd="@id/text_old_pwd"
            android:layout_marginTop="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/colorPrimary"
            android:text="旧密码"/>

        <EditText
            android:id="@+id/text_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_old_pwd"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:inputType="textPassword"
            android:hint="请输入新密码"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/text_new_pwd"
            android:layout_alignRight="@id/text_new_pwd"
            android:layout_alignEnd="@id/text_new_pwd"
            android:layout_marginTop="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/colorPrimary"
            android:text="新密码"/>

        <EditText
            android:id="@+id/text_review_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_new_pwd"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:inputType="textPassword"
            android:hint="请再次输入新密码确认"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/text_review_pwd"
            android:layout_alignRight="@id/text_review_pwd"
            android:layout_alignEnd="@id/text_review_pwd"
            android:layout_marginTop="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/colorPrimary"
            android:text="密码确认"/>
    </RelativeLayout>

    <Button
        android:id="@+id/button_pwd_ok"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:layout_marginBottomPercent="5%"
        app:layout_widthPercent="70%"
        android:background="@drawable/selector_button_bg"
        style="@style/Button_Text"
        android:text="确认"/>
</android.support.percent.PercentRelativeLayout>
