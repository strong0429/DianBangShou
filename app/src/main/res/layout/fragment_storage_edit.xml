<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/percentRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:contentDescription="@string/image_view_description"
        android:scaleType="fitXY"
        android:src="@drawable/goods_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/goods_barcode"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_image"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="条码"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/goods_barcode"
        app:layout_constraintEnd_toEndOf="@+id/goods_barcode"
        app:layout_constraintTop_toTopOf="@+id/goods_barcode" />

    <EditText
        android:id="@+id/goods_name"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goods_barcode"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="名称"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/goods_name"
        app:layout_constraintEnd_toEndOf="@+id/goods_name"
        app:layout_constraintTop_toTopOf="@+id/goods_name" />

    <EditText
        android:id="@+id/goods_spec"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goods_name"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="规格"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/goods_spec"
        app:layout_constraintEnd_toEndOf="@+id/goods_spec"
        app:layout_constraintTop_toTopOf="@+id/goods_spec" />

    <EditText
        android:id="@+id/goods_supplier"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goods_spec"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="供应商"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/goods_supplier"
        app:layout_constraintEnd_toEndOf="@+id/goods_supplier"
        app:layout_constraintTop_toTopOf="@+id/goods_supplier" />

    <EditText
        android:id="@+id/edit_operator"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goods_supplier"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="维护人"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/edit_operator"
        app:layout_constraintEnd_toEndOf="@+id/edit_operator"
        app:layout_constraintTop_toTopOf="@+id/edit_operator" />

    <EditText
        android:id="@+id/edit_date"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_operator"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="更新日期"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/edit_date"
        app:layout_constraintEnd_toEndOf="@+id/edit_date"
        app:layout_constraintTop_toTopOf="@+id/edit_date" />

    <EditText
        android:id="@+id/goods_price"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_date"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="售价"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/goods_price"
        app:layout_constraintEnd_toEndOf="@+id/goods_price"
        app:layout_constraintTop_toTopOf="@+id/goods_price" />

    <EditText
        android:id="@+id/goods_discount"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/edit_date"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="折扣"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/goods_discount"
        app:layout_constraintEnd_toEndOf="@+id/goods_discount"
        app:layout_constraintTop_toTopOf="@+id/goods_discount" />

    <EditText
        android:id="@+id/prompt_date"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:enabled="false"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goods_price"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="优惠日期"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/prompt_date"
        app:layout_constraintEnd_toEndOf="@+id/prompt_date"
        app:layout_constraintTop_toTopOf="@+id/prompt_date" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        android:text=" "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_date" />
</androidx.constraintlayout.widget.ConstraintLayout>
