<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_border"
              android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/bg_border">

        <TextView
            android:id="@+id/text_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="end"
            android:maxLines="3"
            android:padding="4dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="end"
            android:padding="4dp"
            android:textSize="24sp"
            android:text="0.00"
            app:layout_constraintBottom_toTopOf="@+id/text_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/key_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key_bg_border"
            android:gravity="center"
            android:textSize="24sp"
            android:text="7"/>
        <TextView
            android:id="@+id/key_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key_bg_border"
            android:gravity="center"
            android:textSize="24sp"
            android:text="8"/>
        <TextView
            android:id="@+id/key_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key_bg_border"
            android:gravity="center"
            android:textSize="24sp"
            android:text="9"/>
        <TextView
            android:id="@+id/key_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key_bg_border"
            android:gravity="center"
            android:textSize="16sp"
            android:text="清空"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/key_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key_bg_border"
            android:gravity="center"
            android:textSize="24sp"
            android:text="4"/>
        <TextView
            android:id="@+id/key_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key_bg_border"
            android:gravity="center"
            android:textSize="24sp"
            android:text="5"/>
        <TextView
            android:id="@+id/key_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key_bg_border"
            android:gravity="center"
            android:textSize="24sp"
            android:text="6"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/key_bg_border"
            android:layout_weight="1">
        <ImageButton
            android:id="@+id/key_del"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:src="@drawable/delete_number"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/key_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/key_bg_border"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:text="1"/>
                <TextView
                    android:id="@+id/key_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/key_bg_border"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:text="2"/>
                <TextView
                    android:id="@+id/key_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/key_bg_border"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:text="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/key_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/key_bg_border"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:text="0"/>
                <TextView
                    android:id="@+id/key_point"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/key_bg_border"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:text="."/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/key_bg_border"
            android:layout_weight="1">
            <ImageButton
            android:id="@+id/key_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:src="@drawable/ic_add">
        </ImageButton>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>