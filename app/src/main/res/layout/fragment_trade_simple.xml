<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_border">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mid_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".4"
        android:orientation="horizontal">
    </androidx.constraintlayout.widget.Guideline>

    <TextView
        android:id="@+id/text_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="end"
        android:maxLines="3"
        android:padding="4dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/mid_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="end"
        android:padding="4dp"
        android:textSize="24sp"
        android:text="0.00"
        app:layout_constraintBottom_toTopOf="@+id/text_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/key_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/key_bg_border"
        android:gravity="center"
        android:text="7"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_price"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHeight_percent=".15"/>

    <TextView
        android:id="@+id/key_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/key_bg_border"
        android:gravity="center"
        android:text="8"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/key_7"
        app:layout_constraintTop_toTopOf="@id/mid_guideline"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintWidth_percent=".25"/>

    <TextView
        android:id="@+id/key_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/key_bg_border"
        android:gravity="center"
        android:text="9"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/key_8"
        app:layout_constraintTop_toBottomOf="@id/mid_guideline"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHeight_percent=".15"/>

    <TextView
        android:id="@+id/key_clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/key_bg_border"
        android:gravity="center"
        android:text="清空"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/key_9"
        app:layout_constraintTop_toBottomOf="@id/mid_guideline"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHeight_percent=".15"/>

    <TextView
        android:id="@+id/key_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/key_bg_border"
        android:gravity="center"
        android:text="4"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/key_7"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHeight_percent=".15"/>

    <TextView
        android:id="@+id/key_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/key_bg_border"
        android:gravity="center"
        android:textSize="24sp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/key_4"
        app:layout_constraintTop_toBottomOf="@id/key_8"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHeight_percent=".15"/>

    <TextView
        android:id="@+id/key_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/key_bg_border"
        android:gravity="center"
        android:textSize="24sp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@id/key_5"
        app:layout_constraintTop_toBottomOf="@id/key_9"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHeight_percent=".15"/>

    <ImageButton
        android:id="@+id/key_del"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/key_bg_border"
        android:src="@drawable/delete_number"
        app:layout_constraintStart_toEndOf="@id/key_6"
        app:layout_constraintTop_toBottomOf="@id/key_clear"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHeight_percent=".15" />

    <TextView
        android:id="@+id/key_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/key_bg_border"
        android:gravity="center"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/key_4"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHeight_percent=".15" />

    <TextView
        android:id="@+id/key_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/key_bg_border"
        android:gravity="center"
        android:textSize="24sp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@id/key_1"
        app:layout_constraintTop_toBottomOf="@id/key_5"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHeight_percent=".15" />

    <TextView
        android:id="@+id/key_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/key_bg_border"
        android:gravity="center"
        android:textSize="24sp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@id/key_2"
        app:layout_constraintTop_toBottomOf="@id/key_6"
        app:layout_constraintWidth_percent=".25"
        app:layout_constraintHeight_percent=".15" />

    <TextView
        android:id="@+id/key_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/key_bg_border"
        android:gravity="center"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/key_1"
        app:layout_constraintWidth_percent=".5" />

    <TextView
        android:id="@+id/key_point"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/key_bg_border"
        android:gravity="center"
        android:text="."
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/key_0"
        app:layout_constraintTop_toBottomOf="@id/key_3"
        app:layout_constraintWidth_percent=".25" />

    <ImageButton
        android:id="@+id/key_plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_add"
        android:background="@drawable/key_bg_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/key_point"
        app:layout_constraintTop_toBottomOf="@id/key_del"/>
</androidx.constraintlayout.widget.ConstraintLayout>