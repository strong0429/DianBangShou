<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:src="@drawable/goods_default"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/title_name"
        android:layout_toEndOf="@id/title_image"
        android:layout_toRightOf="@id/title_image"
        android:layout_width="64dp"
        style="@style/CommonText_2"
        android:text="名称："/>
    <TextView
        android:id="@+id/goods_name"
        android:layout_toEndOf="@id/title_name"
        android:layout_toRightOf="@id/title_name"
        android:layout_width="match_parent"
        style="@style/CommonText_2"/>

    <TextView
        android:id="@+id/title_spec"
        android:layout_below="@id/title_name"
        android:layout_toEndOf="@id/title_image"
        android:layout_toRightOf="@id/title_image"
        android:layout_width="64dp"
        style="@style/CommonText_2"
        android:text="规格："/>
    <TextView
        android:id="@+id/goods_spec"
        android:layout_below="@+id/goods_name"
        android:layout_toEndOf="@id/title_spec"
        android:layout_toRightOf="@id/title_spec"
        android:layout_width="match_parent"
        style="@style/CommonText_2"/>

    <TextView
        android:id="@+id/title_count"
        android:layout_below="@id/title_spec"
        android:layout_toEndOf="@id/title_image"
        android:layout_toRightOf="@id/title_image"
        android:layout_width="64dp"
        style="@style/CommonText_2"
        android:text="库存："/>
    <TextView
        android:id="@+id/goods_count"
        android:layout_below="@id/goods_spec"
        android:layout_toEndOf="@id/title_count"
        android:layout_toRightOf="@id/title_count"
        android:layout_width="match_parent"
        style="@style/CommonText_2"/>

    <TextView
        android:id="@+id/title_price"
        android:layout_below="@id/title_count"
        android:layout_toEndOf="@id/title_image"
        android:layout_toRightOf="@id/title_image"
        android:layout_width="64dp"
        style="@style/CommonText_2"
        android:text="售价："/>
    <TextView
        android:id="@+id/goods_price"
        android:layout_below="@id/goods_count"
        android:layout_toEndOf="@id/title_price"
        android:layout_toRightOf="@id/title_price"
        android:layout_width="match_parent"
        style="@style/CommonText_2"/>

    <TextView
        android:id="@+id/title_date"
        android:layout_below="@id/goods_price"
        android:layout_toEndOf="@id/title_image"
        android:layout_toRightOf="@id/title_image"
        android:layout_width="64dp"
        style="@style/CommonText_2"
        android:text="优惠期："/>
    <TextView
        android:id="@+id/prom_date"
        android:layout_below="@id/goods_price"
        android:layout_toEndOf="@id/title_date"
        android:layout_toRightOf="@id/title_date"
        android:layout_width="match_parent"
        style="@style/CommonText_2"/>
</RelativeLayout>