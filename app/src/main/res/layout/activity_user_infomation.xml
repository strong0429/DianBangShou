<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:src="@drawable/photo_default"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_photo"
        android:layout_toRightOf="@id/img_photo"
        android:layout_toEndOf="@id/img_photo"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:text="点击图片可选择图片，更换头像"/>
    <Button
        android:id="@+id/button_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_photo"
        android:layout_toRightOf="@id/img_photo"
        android:layout_alignTop="@id/img_photo"
        android:layout_margin="16dp"
        android:background="@drawable/selector_button_bg_s"
        android:textColor="@drawable/selector_button_txtcolor"
        android:text="上传头像"
        android:enabled="false"/>

    <EditText
        android:id="@+id/text_phone"
        android:layout_width="match_parent"
        android:layout_below="@id/img_photo"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="8dp"
        style="@style/EditText"
        android:inputType="phone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_phone"
        android:layout_alignEnd="@id/text_phone"
        android:layout_alignRight="@id/text_phone"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimary"
        android:text="注册手机"/>

    <EditText
        android:id="@+id/text_date"
        android:layout_width="match_parent"
        android:layout_below="@id/text_phone"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="8dp"
        style="@style/EditText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_date"
        android:layout_alignEnd="@id/text_date"
        android:layout_alignRight="@id/text_date"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimary"
        android:text="注册日期"/>

    <EditText
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_below="@id/text_date"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="8dp"
        style="@style/EditText"
        android:hint="输入您的真实姓名"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_name"
        android:layout_alignEnd="@id/text_name"
        android:layout_alignRight="@id/text_name"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimary"
        android:text="用户名"/>

    <EditText
        android:id="@+id/text_idcard"
        android:layout_width="match_parent"
        android:layout_below="@id/text_name"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="8dp"
        android:inputType="phone"
        style="@style/EditText"
        android:hint="输入身份证，字母以*代替"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_idcard"
        android:layout_alignEnd="@id/text_idcard"
        android:layout_alignRight="@id/text_idcard"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimary"
        android:text="身份证"/>

    <EditText
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_below="@id/text_idcard"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="8dp"
        style="@style/EditText"
        android:hint="输入邮箱地址"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_email"
        android:layout_alignEnd="@id/text_email"
        android:layout_alignRight="@id/text_email"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimary"
        android:text="E-mail"/>

    <EditText
        android:id="@+id/text_pwd"
        android:layout_width="match_parent"
        android:layout_below="@id/text_email"
        android:layout_toLeftOf="@id/button_pwd"
        android:layout_toStartOf="@id/button_pwd"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="8dp"
        style="@style/EditText"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/button_pwd"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_email"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/selector_button_bg_s"
        android:textColor="@drawable/selector_button_txtcolor"
        android:text="修改密码"
        android:onClick="onClick_Pwd"/>

    <Button
        android:id="@+id/button_save"
        app:layout_widthPercent="70%"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/selector_button_bg"
        style="@style/Button_Text"
        android:enabled="false"
        android:text="保存修改"/>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDisabledLight"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">

        <TextView
            android:id="@+id/pop_title"
            android:layout_marginTop="24dp"
            app:layout_marginLeftPercent="10%"
            app:layout_widthPercent="25%"
            android:gravity="center"
            android:text="输入密码"
            style="@style/CommonText"/>

        <EditText
            android:id="@+id/text_chk_pwd"
            android:layout_toEndOf="@id/pop_title"
            android:layout_toRightOf="@id/pop_title"
            android:layout_alignBottom="@id/pop_title"
            android:background="@drawable/bg_border"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%"
            android:gravity="center"
            android:padding="4dp"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/button_pwd_ok"
            android:layout_below="@+id/text_chk_pwd"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layout_marginLeftPercent="10%"
            app:layout_widthPercent="35%"
            android:background="@drawable/selector_button_bg"
            android:textColor="@drawable/selector_button_txtcolor"
            android:text="确认"/>
        <Button
            android:id="@+id/button_pwd_cancel"
            android:layout_alignBottom="@+id/button_pwd_ok"
            android:layout_toRightOf="@+id/button_pwd_ok"
            android:layout_height="40dp"
            app:layout_marginLeftPercent="10%"
            app:layout_widthPercent="35%"
            android:background="@drawable/selector_button_bg_s"
            android:textColor="@drawable/selector_button_txtcolor"
            android:text="取消"/>
    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
