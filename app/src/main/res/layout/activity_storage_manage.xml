<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/title_bg_shape"/>

    <EditText
        android:id="@+id/find_editbox"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edit_box_frame"
        android:layout_margin="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:hint="输入商品名称或拼音首字母查询"/>

    <ImageView
        android:id="@+id/button_clear"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/rubber"
        android:layout_alignEnd="@id/find_editbox"
        android:layout_alignRight="@id/find_editbox"
        android:layout_alignBottom="@id/find_editbox"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/goods_list"
        android:layout_below="@id/title"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
