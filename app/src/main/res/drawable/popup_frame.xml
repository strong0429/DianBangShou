<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--这里是Linearlayout布局的背景颜色-->
    <solid android:color="#eee" />

    <!--这里是设置边框线的粗细和颜色-->
    <stroke
        android:width="2dp"
        android:color="#aaa" />

    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />

    <!--角的话，里边有参数可以单独设置-->
    <corners
        android:topLeftRadius="6dp"
        android:topRightRadius="6dp"/>
</shape>